set -e -x

echo "cgal Installation"

echo "Extracting..."
tar xvf postgis-cgal/cgal-releases-CGAL-4.13.tar.gz

echo "Building..."
pushd cgal-releases-CGAL-* > /dev/null
BOOST_ROOT=/var/vcap/packages/postgis-boost GMP_DIR=/var/vcap/packages/postgis-gmp MPFR_INC_DIR=/var/vcap/packages/postgis-mpfr/include MPFR_LIB_DIR=/var/vcap/packages/postgis-mpfr/lib cmake -DCMAKE_INSTALL_PREFIX=/var/vcap/packages/postgis-cgal -DCMAKE_BUILD_TYPE=Release .
make install

popd > /dev/null

echo "Complete"