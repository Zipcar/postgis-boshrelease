set -e -x

echo "sfcgal Installation"

echo "Extracting..."
tar xvf postgis-sfcgal/SFCGAL-1.3.6.tar.gz

echo "Building..."
pushd SFCGAL-* > /dev/null
BOOST_ROOT=/var/vcap/packages/postgis-boost CGAL_DIR=/var/vcap/packages/postgis-cgal GMP_DIR=/var/vcap/packages/postgis-gmp MPFR_INC_DIR=/var/vcap/packages/postgis-mpfr/include MPFR_LIB_DIR=/var/vcap/packages/postgis-mpfr/lib cmake -DCMAKE_INSTALL_PREFIX=/var/vcap/packages/postgis-sfcgal -DCMAKE_BUILD_TYPE=Release  .
make
make install
popd > /dev/null

echo "Complete"